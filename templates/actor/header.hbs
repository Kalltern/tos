{{! Sheet Header }}
<header class="sheet-header">
  <div class="profile-container">
    <img
      class="profile-img"
      src="{{actor.img}}"
      data-edit="img"
      data-action="onEditImage"
      title="{{actor.name}}"
      height="216"
      width="216"
    />

  <div class="grid grid-2col">
 
        <div class="grid-span-1">
          <label>{{localize (concat 'TOS.Actor.Character.stats.health.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.health.value"
              value=" {{system.stats.health.value}}" 
              data-value="system.stats.health.value"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{system.stats.health.max}}" 
              data-value="system.stats.health.max" 
              readonly
            />
          </div>
        </div>

         <div class="grid-span-1">
          <label>{{localize (concat 'TOS.Actor.Character.stats.stamina.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.stamina.value"
              value="{{system.stats.stamina.value}}" 
              data-value="system.stats.stamina.value"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{system.stats.stamina.max}}" 
              data-value="system.stats.stamina.max" 
              readonly
            />
          </div>
        </div>

        <div class="grid-span-1">
          <label>{{localize (concat 'TOS.Actor.Character.stats.toxicity.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.toxicity.value"
              value="{{system.stats.toxicity.value}}" 
              data-value="system.stats.toxicity.value"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{system.stats.toxicity.max}}" 
              data-value="system.stats.toxicity.max" 
              readonly
            />
          </div>
        </div>
       {{#if system.magicPotential}}
        <div class="grid-span-1">
          <label>{{localize (concat 'TOS.Actor.Character.stats.mana.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.mana.value"
              value="{{system.stats.mana.value}}" 
              data-value="system.stats.mana.value"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{system.stats.mana.max}}" 
              data-value="system.stats.mana.max" 
              readonly
            />
          </div>
        </div>
      {{/if}}
      {{#if system.priest}}
        <div class="grid-span-1">
          <label>{{localize (concat 'TOS.Actor.Character.stats.holyEnergy.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.holyEnergy.value"
              value="{{system.stats.holyEnergy.value}}" 
              data-value="system.stats.holyEnergy.value"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{system.stats.holyEnergy.max}}" 
              data-value="system.stats.holyEnergy.max" 
              readonly
            />
          </div>
        </div>
      {{/if}}

  </div>
</div>

  <div class="header-fields">
     <div class="grid grid-2col">
    <div class="document-name grid-span-1 ">
      <input
        name="name"
        type="text"
        value="{{actor.name}}"
        placeholder="Name"
      />
    </div>
<div class="grid-span-1">
  {{#if race.length}}
    {{#each race as |item id|}}
      <div class="item-name">
        <input 
          type="text" 
          value="{{item.name}}" 
          readonly
        />
      </div>
    {{/each}}
  {{else}}
    <input 
      type="text" 
      value="" 
      placeholder="Choose a race" 
      readonly
    />
  {{/if}}
</div>

    </div>
    <hr>
    {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  }}

    {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
    <div class="attributes flexrow">
      {{#each system.attributes as |attribute key|}}
        <div class="attribute flexcolumn flex-group-center">
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll="(@attributes.{{key}}.mod)-1d100"
            data-roll-type="attribute"
            data-label="{{key}}"
          >
            {{localize (lookup @root.config.attributes key)}}
          </label>
          <input
            type="text"
            value="{{attribute.total}}"
            class="attribute-score"
            data-dtype="Number"
            readonly
               />
         
          <span
            class="attribute-mod rollable"
            data-action="roll"
            data-roll="(@attributes.{{key}}.mod)-1d100"
            data-roll-type="attribute"
            data-label="{{key}}"
          >
            {{numberFormat attribute.mod decimals=0}}
          </span>
        </div>
      {{/each}}
    </div>
    <div class="Attributes flexrow">
      {{#each system.secondaryAttributes as |attribute key|}}
        <div class="attribute flexcolumn flex-group-center">
           {{#if (eq key "spd")}} 
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll-type="secondaryAttribute"
            data-roll="(@secondaryAttributes.{{key}}.total)+(@secondaryAttributes.ini.total)+1d12"
            data-label="{{key}}"
          >
           {{/if}}
          {{#if (eq key "lck")}} 
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll-type="secondaryAttribute"
            data-roll="(@secondaryAttributes.{{key}}.total*5)+50-1d100"
            data-label="{{key}}"
          >
           {{/if}}    
         {{#if (eq key "res")}} 
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll-type="secondaryAttribute"
            data-roll="(@secondaryAttributes.{{key}}.total*10)-1d100"
            data-label="{{key}}"
          >
           {{/if}} 
         {{#if (eq key "fth")}} 
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll-type="secondaryAttribute"
            data-roll="(@secondaryAttributes.{{key}}.total*8)-1d100"
            data-label="{{key}}"
          >
           {{/if}}   
         {{#if (eq key "sin")}} 
          <label
            class="resource-label rollable"
            data-action="roll"
            data-roll-type="secondaryAttribute"
            data-roll="(@secondaryAttributes.res.total*10)-(@secondaryAttributes.{{key}}.total*3)-1d100"
            data-label="{{key}}"
          >
           {{/if}}                      
            {{localize (lookup @root.config.secondaryAttributes key)}}
          </label>
          <input
            type="text"
            value="{{attribute.total}}"
            class="attribute-score"
            data-dtype="Number"
            readonly
          />

        </div>
      {{/each}}
    </div>
<hr>
<div class="stats">
  <div class="stat-row">
    {{#each system.stats as |stat key|}}
      {{#if (or (eq key "graveWounds") (eq key "fatigue") (eq key "corruption") (eq key "mind") (eq key "insanity") )}}
        <div class="attribute">
          <label>{{localize (concat 'TOS.Actor.Character.stats.' key '.value.label')}}</label>
          
          <!-- Current value input (editable) -->
          <div class="stat-values">
            <input 
              type="text" 
              class="stat-input stat-current" 
              name="system.stats.{{key}}.value"
              value="{{stat.value}}" 
              data-value="{{stat.value}}"
            />
            
            <!-- Max value input (grayed out, readonly) -->
            <input 
              type="text" 
              class="stat-input stat-max" 
              value="{{stat.max}}" 
              data-value="{{stat.max}}" 
              readonly
            />
          </div>
        </div>
      {{/if}}
    {{/each}}
      <div>
        <div class="attribute-armor">
        <label class="resource-label">{{localize "Armor"
          }}</label>
        <input
          type="text"
          name="system.armorTotal"
          value="{{system.armorTotal}}"
          data-dtype="Number"
          readonly
        />
        </div>
  </div>
  </div>
</div>



  </div>
  

</header>