{{! Abilities Tab }}
<section
  class="tab ability {{tab.cssClass}}"
  data-group="primary"
  data-tab="abilities"
>
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name">{{localize "Ability"}}</div>
      <div class="item-formula">{{localize
          "TOS.Item.Ability.FIELDS.costType.label"
        }}</div>
      <div class="item-formula">{{localize
          "TOS.Item.Ability.FIELDS.actionCost.label"
        }}</div>
      <div class="item-formula">{{localize
          "TOS.Item.Ability.FIELDS.damage.label"
        }}</div>
      <div class="item-formula">{{localize
          "TOS.Item.Ability.FIELDS.attributeTest.label"
        }}</div>
      <div class="item-controls">
        {{#if @root.editable}}
          <a
            class="item-control item-create"
            title="{{localize 'DOCUMENT.Create' type="Item"}}"
            data-action="createDoc"
            data-document-class="Item"
            data-type="ability"
          >
            <i class="fas fa-plus"></i>
            {{localize "DOCUMENT.New" type="item"}}
          </a>
        {{/if}}
      </div>
    </li>

    {{#each ability as |item id|}}
      <li
        class="item flexrow"
        data-item-id="{{item._id}}"
        data-drag="true"
        data-document-class="Item"
      >
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item" data-action="roll">
              <img
                src="{{item.img}}"
                title="{{item.name}}"
                width="24"
                height="24"
              />
            </a>
          </div>
          <div>{{item.name}}</div>
        </div>
        <div class="item-formula item-prop">{{item.system.costType}}</div>
        <div class="item-formula item-prop">{{item.system.actionCost}}</div>
        <div class="item-formula item-prop">{{item.system.roll.diceBonus}}</div>
        <div class="item-formula item-prop">{{item.system.attributeTest}}</div>
        <div class="item-controls">
          <a
            class="item-control item-edit"
            title="{{localize 'DOCUMENT.Update' type="Ability"}}"
            data-action="viewDoc"
          >
            <i class="fas fa-edit"></i>
          </a>
          {{#if @root.editable}}
            <a
              class="item-control item-delete"
              title="{{localize 'DOCUMENT.Delete' type="Ability"}}"
              data-action="deleteDoc"
            >
              <i class="fas fa-trash"></i>
            </a>
          {{/if}}
        </div>
      </li>
    {{/each}}
  </ol>
</section>