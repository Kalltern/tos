{{! Attributes Tab }}
<section
  class="tab attributes {{tab.cssClass}}"
  data-group="primary"
  data-tab="attributes"
>
  {{! As you add new fields, add them in here! }}


  <div class="grid-span-1">
        <label class="resource-label">{{localize
            "TOS.Item.Gear.FIELDS.armor.label"
          }}</label>
        <input
          type="text"
          name="system.armor.value"
          value="{{system.armor.value}}"
          data-dtype="Number"
        />
  </div>
  <div>
   <label class="resource-label">{{localize
     "TOS.Item.Gear.FIELDS.helmet.label"
       }}</label>
  <input type="checkbox" name="system.helmet" {{#if system.helmet}}checked{{/if}} />
  </div>
  <div class="grid-span-1">
        <label class="resource-label">{{localize
            "TOS.Item.Gear.FIELDS.layer.label"
          }}</label>
        <input
          type="text"
          name="system.armor.layer"
          value="{{system.armor.layer}}"
          data-dtype="string"
        />
  </div>

</section>